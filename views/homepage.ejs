<!DOCTYPE html>
<html ng-app="BrewSourcePublic">
<head>
  <title>BrewSource Inc.</title>

  <!-- Viewport mobile tag for sensible mobile support -->
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">


  <!--STYLES-->
  <link rel="stylesheet" href="/styles/angular-toastr.css">
  <link rel="stylesheet" href="/styles/importer.css">
  <link rel="stylesheet" href="/styles/styles.css">
  <link rel="stylesheet" href="/styles/third-party/material/material.css">
  <link rel="stylesheet" href="/styles/third-party/material/material.min.css">
  <link rel="stylesheet" href="/styles/third-party/materialize/materialize.css">
  <!--STYLES END-->

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
  <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.red-deep_orange.min.css"/>
  <link rel="stylesheet"
        href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en">

  <!--Added this so the client has access to the csrf tag and it's grabbed first service side on every page -->
  <script type="text/javascript">
    window.SAILS_LOCALS = {_csrf: "<%= _csrf %>"};
  </script>

</head>

<body ng-app="BrewSourcePublic" ng-controller="PublicCtrl" ng-cloak>

<!-- Global errors (uiErrorBus) -->
<div class="ui-error-bus">
  <li ng-repeat="error in errorBus"><span>{{error.message}}</span><span ng-click="errorBus.splice(indexOf(error), 1)"
                                                                        class="fa fa-remove"></span></li>
</div>
</div>

<div class="container">
  <br/>
  <h1 class="logo-font slogan amber-text text-darken-3 centralized-text">brewsource</h1>
  <h4 class="logo-font sub-slogan centralized-text">a raspberry pi-powered monitor for your fermentation </h4>
  <br>
  <% if (req.session.me) { %>
  <div class="row center">
    <h5 class="header col s12 light">Go to your profile to get started</h5>
  </div>
  <div class="row center">
    <a href="/#/profile" id="profileBtn"
       class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect amber darken-3 white-text">View
      Profile</a>
  </div>
  <% } else { %>
  <div class="row center">
    <h5 class="header col s12 light">Sign up below to start brewing!</h5>
  </div>
  <div class="row center">
    <a href="/signup" id="signupBtn"
       class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect amber darken-3 white-text">Sign Up</a>
  </div>
  <% } %>
  <br><br>

</div>

<div class="container">
  <div class="section">
    <br>

    <!--   Icon Section   -->
    <div class="row">
      <div class="col s12 m4">
        <div class="icon-block">
          <p class="light"></p>
        </div>
      </div>

      <div class="col s12 m4 centralized">
        <div class="icon-block">
          <p class="light centralized centralized-text">
            BrewSource is an Open Source class project at the University of Agder created for learning
            open source principles, code and more..
          </p>
          <p class="centralized-text"><a href="https://github.com/mortea15/BrewSource" target="_blank">
              Check us out over on GitHub!</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

<!-- Google Analytics -->
<script>
  (function (i, s, o, g, r, a, m) {
    i['GoogleAnalyticsObject'] = r;
    i[r] = i[r] || function () {
        (i[r].q = i[r].q || []).push(arguments)
      }, i[r].l = 1 * new Date();
    a = s.createElement(o),
      m = s.getElementsByTagName(o)[0];
    a.async = 1;
    a.src = g;
    m.parentNode.insertBefore(a, m)
  })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

  ga('create', 'UA-97439800-1', 'auto');
  ga('send', 'pageview');

</script>


<!--SCRIPTS-->
<script src="/js/dependencies/sails.io.js"></script>
<script src="/js/dependencies/angular.1.3.js"></script>
<script src="/js/dependencies/angular-messages.js"></script>
<script src="/js/dependencies/angular-route.min.js"></script>
<script src="/js/dependencies/angular-toastr.js"></script>
<script src="/js/dependencies/compareTo.module.js"></script>
<script src="/js/dependencies/jquery.js"></script>
<script src="/js/dependencies/lodash.min.js"></script>
<script src="/js/dependencies/moment.js"></script>
<script src="/js/brewsource-dashboard/BrewSourceDashboard.module.js"></script>
<script src="/js/brewsource-dashboard/DashboardCtrl.js"></script>
<script src="/js/brewsource-public/BrewSourcePublic.module.js"></script>
<script src="/js/brewsource-public/ui-controls/PublicCtrl.js"></script>
<script src="/js/third-party/material/material.js"></script>
<script src="/js/third-party/material/material.min.js"></script>
<script src="/js/third-party/materialize/jquery-2.1.1.min.js"></script>
<script src="/js/third-party/materialize/materialize.js"></script>
<script src="/js/third-party/materialize/materialize.min.js"></script>
<!--SCRIPTS END-->
</body>
</html>

